<Window x:Class="GettingRealWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingRealWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Label Content="Velkommen {navn}" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="DemiBold"/>

        <Button HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center" Height="150" Width="250" FontSize="30">
            <TextBlock TextAlignment="Center">Opret <LineBreak/> booking</TextBlock>
        </Button>

        <Button HorizontalAlignment="Right" Margin="0,0,100,0" VerticalAlignment="Center" Height="150" Width="250" FontSize="30">
            <TextBlock TextAlignment="Center">Se eller <LineBreak/> rediger booking</TextBlock>
        </Button>
    </Grid>
</Window>
