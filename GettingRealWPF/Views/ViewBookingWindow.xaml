<Window x:Class="GettingRealWPF.Views.ViewBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingRealWPF.Views"
        mc:Ignorable="d"
        Title="VHOBook" Height="450" Width="800">
    <Grid>
        <Label x:Name="titleLblSeeBook" Content="Informationer for: ${Booking ID}" HorizontalAlignment="Center" Margin="0,50,0,0" FontSize="28" FontWeight="Black" VerticalAlignment="Top"/>
        <Label x:Name="bookingInformation" Content="Indeholder: ${booking indhold} og er booket til: ${dato}" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="24"/>
        <Button Content="Rediger" HorizontalAlignment="Center" Margin="0,0,250,50" VerticalAlignment="Bottom" Height="50" Width="150" FontSize="24"/>
        <Button Content="Slet" HorizontalAlignment="Center" Margin="250,0,0,50" VerticalAlignment="Bottom" Height="50" Width="150" FontSize="24"/>

    </Grid>
</Window>
